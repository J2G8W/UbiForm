{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "component_schema_v1",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "schemas": {
      "type": "object",
      "patternProperties": {
        "[A-Za-z0-9_]*": {
          "type": "object",
          "properties": {
            "connectionParadigm": {
              "type": "string",
              "enum": [
                "pair",
                "publisher",
                "subscriber"
              ]
            },
            "listenPort": {
              "type": "number"
            },
            "send": {
              "type": "object"
            },
            "receive": {
              "type": "object"
            }
          },
          "required": [
            "connectionParadigm"
          ]
        }
      }
    },
    "urls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "port": {
      "type": "number"
    }
  },
  "required": [
    "name",
    "schemas"
  ],
  "additionalProperties": {
    "type": "string"
  }
}